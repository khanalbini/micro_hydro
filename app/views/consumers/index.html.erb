<script type="text/javascript">
  $(document).ready(function() {
    $('#consumer-table').DataTable({
      "oLanguage": {
        "sSearch": "SEARCH &nbsp;"
      }
    });
} );
</script>
    <div class="container-fluid">

      <div class="col-sm" style="font-size: 12px;">
        <h4><i class="fa fa-users fa-lg"></i> Consumers</h4> 
        <table id="consumer-table" class="table table-striped table-bordered" cellspacing="0">
          <thead>
            <tr>
              <th>First name</th>
<!--               <th>Middle name</th> -->
              <th>Last name</th>
              <th>DOB</th>
              <th>Gender</th>
              <th>Email</th>
              <th>Phone</th>
<!--               <th>Phone2</th> -->
              <th>Street Address</th>
<!--               <th>Address 2</th> -->
              <th>City</th>
              <th>District</th>
<!--               <th>State</th> -->
<!--               <th>Zipcode</th> -->
<!--               <th>Country</th> -->
              <th>Consumer type</th>
<!--               <th></th> -->
              <th>Action</th>
<!--               <th></th> -->
            </tr>
          </thead>

          <tbody>
            <% @consumers.each do |consumer| %>
              <tr>
                <td><%= consumer.first_name %></td>
<!--                 <td><%= consumer.middle_name %></td> -->
                <td><%= consumer.last_name %></td>
                <td><%= consumer.dob %></td>
                <td><%= consumer.gender %></td>
                <td><%= consumer.email %></td>
                <td><%= consumer.phone1 %></td>
<!--                 <td><%= consumer.phone2 %></td> -->
                <td><%= consumer.address_1 %></td>
<!--                 <td><%= consumer.address_2 %></td> -->
                <td><%= consumer.city %></td>
                <td><%= consumer.district %></td>
<!--                 <td><%= consumer.state %></td> -->
<!--                 <td><%= consumer.zipcode %></td> -->
<!--                 <td><%= consumer.country %></td> -->
                <td><%= consumer.consumer_type %></td>
                <td>
                <%=
                dropdown = [
                           # Link Structure: ['Link Name', link_path(:params), 'link_type'], link_type can be 'ajax', 'static', or 'disabled'
                           ['Add Monthly Consumption', new_monthly_power_consumption_path(consumer: consumer.id),'ajax'],
                           ['View Monthly Consumption', edit_monthly_power_consumption_path(consumer.id), 'ajax']
                          ]
                render 'shared/datatable/consumer_action_dropdown', dropdowns: dropdown, consumer_id: consumer.id, formats: :html
                %>
                </td>
<!--            <td><%#= link_to 'Destroy', consumer, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
              </tr>
            <% end %>
          </tbody>
        </table>
        <%= link_to 'New Consumer', new_consumer_path %>
      </div>

    </div><!-- /.container -->


